<article class="post">
    <a class="post-link" href="test-page.html">
        <div class="post-container">

            <h1 class="post-title">{{var1.title}}</h1>
            <span class="post-date">{{var1.date}}</span>

            <div class="parent-post-text">
                <object><a href="https://www.youtube.com/embed/xFa2_PVMeDQ">{{var1.link}}</a></object>
                {{#each var1.text}}
                <p>
                    {{this}}
                </p>
                <p>&nbsp;</p>
                {{/each}}
            </div>
            <!--<span class="read-pull-post">Читать статью ►</span>-->
        </div>
    </a>
</article>


