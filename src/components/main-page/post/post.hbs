<div class="manual-Card">
    <article class="post">
        <a class="post-link" href="full-page.html">
            <div class="post-wrapper">
                <div class="post-container">
                    <div class="wrapper-post-text">
                        <h1 class="post-title">{{var.title}}</h1>
                        <span class="post-date">{{var.date}}</span>
                        <object><a href="{{var.link}}" is="video-link">{{var.textLink}}</a></object>
                        {{#each var.text}}
                            <p>
                                {{this}}
                            </p>
                            <p>&nbsp;</p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </a>
        {{> share-bar var=var.num}}
    </article>
</div>